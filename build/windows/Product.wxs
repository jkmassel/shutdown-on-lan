				<ServiceInstall Id="ServiceInstaller" LoadOrderGroup="NetworkProvider" Type="ownProcess" Vital="yes" Name="ShutdownOnLan" DisplayName="Shutdown On LAN" Description="Shuts down the computer in response to an external signal." Start="auto"  ErrorControl="normal" Interactive="no" />
				<ServiceControl Id="StartService" Stop="both" Start="install" Remove="uninstall" Name="ShutdownOnLan" 	/>
			</Component>
		</ComponentGroup>
	</Fragment>
</Wix>
